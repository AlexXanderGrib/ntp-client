{
  "name": "ntp-client-promise",
  "version": "1.1.0",
  "description": "Query time from NTP servers with promises",
  "types": "./index.d.ts",
  "main": "./index.js",
  "sideEffects": false,
  "repository": "https://github.com/xxhax-team/ntp-client-promise",
  "homepage": "https://github.com/xxhax-team/ntp-client-promise#readme",
  "scripts": {
    "build": "tsc"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "semi": false
  },
  "files": [
    "index.js",
    "index.d.ts",
    "README.md"
  ],
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "browser": false
    },
    "parserOptions": {
      "ecmaVersion": 2015,
      "sourceType": "script"
    },
    "extends": [
      "airbnb-base",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "root": true,
    "plugins": [
      "prettier",
      "imports"
    ]
  },
  "author": "XXHAX Team <putin@xxhax.com>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "keywords": [
    "backend",
    "time",
    "date",
    "ntp"
  ],
  "engines": {
    "node": ">8"
  }
}
